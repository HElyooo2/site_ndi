{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
    .auth-form{padding:25px;background-color:#b71818;border-radius:15px;margin-left:auto;margin-right:auto;margin-top:20%}h2{margin-left:auto;margin-right:auto}#email,#password{margin-bottom:10px;border-radius:15px;padding-left:20px;padding-top:5px;height:50px;border:none}.inscription{display:flex;flex-direction:column}label{margin-left:auto;margin-right:auto;margin-bottom:10px;color:#fff}#connexion{border-radius:15px;background-color:#ffb524;border:none;padding-top:5px;height:50px;color:#fff;font-family:Main;font-size:1.1rem;padding-bottom:5px}a.already{color:#fff;font-family:Main;font-size:1.1rem;height:50px;display:flex;justify-content:center;align-items:center}.mt-4{margin-top:10px}*{box-sizing:border-box}h1{font-weight:700;margin:0}h2{text-align:center}a{color:#333;font-size:14px;text-decoration:none;margin:15px 0}button{border-radius:20px;border:1px solid #ff4b2b;background-color:#ff4b2b;color:#fff;font-size:12px;font-weight:700;padding:12px 45px;letter-spacing:1px;text-transform:uppercase;transition:transform 80ms ease-in}button:active{transform:scale(.95)}button:focus{outline:0}form{display:flex;align-items:center;justify-content:center;flex-direction:column;padding:0 50px;height:100%;text-align:center}input{background-color:#eee;border:none;padding:12px 15px;margin:8px 0;width:100%}@keyframes show{0%,49.99%{opacity:0;z-index:1}100%,50%{opacity:1;z-index:5}}

</style>
<div class="auth-form">

    <h1 class="h3 mb-3 font-weight-normal">Creer un compte</h1>

    {{ form_start(registrationForm) }}
    <div class="mt-4">
        {{ form_row(registrationForm.username) }}
    </div>
    <div class="mt-4">
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
</div>
{#    <div class="mt-4">#}
{#        {{ form_row(registrationForm.agreeTerms) }}#}
{#    </div>#}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
